@model MailFlow.Dtos.UserRegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>MailFlow | Kayıt</title>

    <link rel="stylesheet" href="~/template/assets/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" />

    <style>
        body {
            font-family: 'Inter', sans-serif;
            /* Modern Mesh Gradient Arka Plan */
            background-color: #dfdbe5;
            background-image: radial-gradient(at 0% 0%, hsla(253,16%,7%,1) 0, transparent 50%), radial-gradient(at 50% 0%, hsla(225,39%,30%,1) 0, transparent 50%), radial-gradient(at 100% 0%, hsla(339,49%,30%,1) 0, transparent 50%);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            margin: 0;
            padding: 20px;
        }

        /* Bağımsız Logo Alanı */
        .brand-logo {
            margin-bottom: 25px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

            .brand-logo:hover {
                transform: scale(1.05);
            }

        .logo-circle {
            width: 60px;
            height: 60px;
            background: white;
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
            font-size: 32px;
            color: #4f46e5;
        }

        /* Kompakt Kart Yapısı */
        .auth-card {
            background: rgba(255, 255, 255, 0.98);
            border-radius: 20px;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
            width: 100%;
            max-width: 420px;
            padding: 30px; /* İç boşluğu kısalttık */
        }

        .form-label {
            font-size: 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            color: #666;
            margin-bottom: 4px;
        }

        .form-control {
            border-radius: 8px;
            padding: 9px 12px;
            font-size: 0.9rem;
            border: 1px solid #e2e8f0;
            background: #f8fafc;
        }

            .form-control:focus {
                background: #fff;
                border-color: #4f46e5;
                box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
            }

        .btn-register {
            background: #4f46e5;
            color: white;
            border: none;
            border-radius: 8px;
            padding: 11px;
            font-weight: 600;
            font-size: 0.95rem;
            transition: all 0.2s;
        }

            .btn-register:hover {
                background: #4338ca;
                box-shadow: 0 4px 12px rgba(79, 70, 229, 0.3);
            }

        .input-group-text {
            background: #f8fafc;
            border-color: #e2e8f0;
            cursor: pointer;
            color: #94a3b8;
        }

        .divider {
            height: 1px;
            background: #eee;
            margin: 20px 0;
        }

       
    </style>
</head>

<body>
    <div class="brand-logo">
        <div class="logo-circle">
            <i class='bx bxs-envelope'></i>
        </div>
        <h5 class="text-white mt-2 fw-bold" style="letter-spacing: 1px;">MAILFLOW</h5>
    </div>

    <div class="auth-card">
        <div class="text-center mb-4">
            <h5 class="fw-bold m-0">Hesabınızı Oluşturun</h5>
            <small class="text-muted">Birkaç adımda aramıza katılın</small>
        </div>

        <form asp-action="CreateUser" method="post" class="row g-2">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

            <div class="col-6">
                <label class="form-label">AD</label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Ad">
            </div>
            <div class="col-6">
                <label class="form-label">SOYAD</label>
                <input type="text" class="form-control" asp-for="Surname" placeholder="Soyad">
            </div>

            <div class="col-12">
                <label class="form-label">Kullanıcı Adı</label>
                <input type="text" class="form-control" asp-for="Username" placeholder="Kullanıcı Adınız">
            </div>

            <div class="col-12">
                <label class="form-label">E-Posta</label>
                <input type="email" class="form-control" asp-for="Email" placeholder="E-Postanız">
            </div>

            <div class="col-12">
                <label class="form-label">Şifre</label>
                <div class="input-group">
                    <input type="password" class="form-control border-end-0" asp-for="Password" id="p1" placeholder="Şifre">
                    <span class="input-group-text border-start-0" onclick="eye('p1', this)"><i class='bx bx-low-vision'></i></span>
                </div>
            </div>

            <div class="col-12">
                <div class="input-group">
                    <input type="password" class="form-control border-end-0" asp-for="ConfirmPassword" id="p2" placeholder="Tekrar">
                    <span class="input-group-text border-start-0" onclick="eye('p2', this)"><i class='bx bx-low-vision'></i></span>
                </div>
            </div>

            <div class="col-12 mt-3">
                <div class="form-check form-switch d-flex align-items-center">
                    <input class="form-check-input" type="checkbox" asp-for="AcceptTerms" id="chk">
                    <label class="form-check-label small ms-2" for="chk">Şartları onaylıyorum</label>
                </div>
            </div>

            <div class="col-12 mt-3">
                <button type="submit" class="btn btn-register w-100">KAYDI TAMAMLA</button>
            </div>
        </form>

        <div class="divider"></div>

        <div class="text-center">
            <p class="small text-muted mb-0">Zaten bir hesabınız var mı? <a href="/Login/Index" class="text-primary fw-bold text-decoration-none">Giriş Yap</a></p>
        </div>
    </div>

    <script>
        function eye(id, el) {
            const input = document.getElementById(id);
            const icon = el.querySelector('i');
            if (input.type === "password") {
                input.type = "text";
                icon.classList.replace('bx-low-vision', 'bx-show');
            } else {
                input.type = "password";
                icon.classList.replace('bx-show', 'bx-low-vision');
            }
        }
    </script>
</body>
</html>